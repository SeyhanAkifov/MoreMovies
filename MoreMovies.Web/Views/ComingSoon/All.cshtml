@model ICollection<ComingSoonViewModel>

@{
    ViewData["Title"] = "All Coming Soon";
}
<h1 class="subtitle fancy">All Coming Soon</h1>
<hr class="hr-2" />

<div class="mt-3">
    <div class="row d-block d-wrap">
        @foreach (var item in Model)
        {
        <article class="soon-item">
            <article class="soon-head">
            <img width="100" height="200" src=@item.ImageUrl alt="" />
        </article>
            <article class="soon-body">
                <h1 style="color:darkgoldenrod">@item.Title</h1>

                <p style="color:black">
                    @item.Description
                </p>
            </article>
        </article>

        }
    </div>
</div>