@model ComingSoonViewModel

<article class="bg-gray-800 rounded-lg shadow hover:shadow-lg transition duration-200 flex flex-col h-full">
    <div class="relative group">
        <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? Url.Content("~/css/images/placeholder.png") : Model.ImageUrl)"
             alt="@Model.Title"
             class="w-full h-64 object-cover">
        <div class="absolute inset-0 bg-black bg-opacity-50 opacity-0 group-hover:opacity-100 transition duration-200 flex items-center justify-center">
            <h4 class="text-white font-semibold text-lg px-2 text-center">@Model.Title</h4>
        </div>
    </div>
    <div class="p-4 flex flex-col flex-grow space-y-2">
        <p class="text-gray-300 text-sm line-clamp-3 flex-grow">@Model.Description</p>
        <div class="mt-auto text-center">
            <a asp-controller="ComingSoon" asp-action="Details" asp-route-id="@Model.Id"
               class="inline-block bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded transition duration-200 w-full">
                Read More
            </a>
        </div>
    </div>
</article>
