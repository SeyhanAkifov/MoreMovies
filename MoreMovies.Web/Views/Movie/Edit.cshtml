@model EditMovieInputModel

@{
    ViewData["Title"] = "Movie edit";
}

<form class="text-center border border-light p-5" asp-controller="Movie" asp-action="EditMovie" asp-route-id="@Model.Id" name="@Model.Id" method="post">
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" type="text" class="form-control" placeholder="Title" name="title" value="@Model.Title">
        <span asp-validation-for="Title" class="m-md-0 text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="ImageUrl">Image</label>
        <input asp-for="ImageUrl" type="text" class="form-control" placeholder="Image" name="imageUrl" value="@Model.ImageUrl">
        <span asp-validation-for="ImageUrl" class="m-md-0 text-danger"></span>
    </div>



    <div class="form-group">
        <label asp-for="HomePage">HomePage</label>
        <input asp-for="HomePage" type="text" class="form-control" placeholder="HomePage" name="homePage" value="@Model.HomePage">
        <span asp-validation-for="HomePage" class="m-md-0 text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" type="text" class="form-control" placeholder="Description" name="description" value="@Model.Description">
        <span asp-validation-for="Description" class="m-md-0 text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Edit movie</button>
</form>
