@{
}


<body >

    <div class="container" style="background: url(@Model.ImageUrl)>
        <div class="row bg-light text-dark">
            <h1>@Model.Title</h1>

            <div class="img-fluid">
                <img src="~/@Model.ImageUrl" alt="Image" width="200" height="300">
            </div>
            <div class="col-md-4 text-center">
                <h3 class="my-3 ">Movie info</h3>
                <p>Movie Info</p>
                <h3 class="my-lg-n4 ">@Model.Language.</h3>
                <h3 class="my-3 "> <a href=@Model.HomePage>Home Page</a></h3>
                <h3 class="my-3 ">@Model.Genre.</h3>
                <h3 class="my-3 ">@Model.Country.</h3>
                <h3 class="my-xl-0 ">@Model.Budget $</h3>
                <h3 class="my-3 ">@Model.Description</h3>
                <h3 class="my-3 ">@Model.ReleaseDate</h3>

                <form method="post">
                <a class="btn btn-danger" asp-controller="Movie" asp-action="Delete" asp-route-id="@Model.Id" name="@Model.Id">Delete</a>
                </form>
                <a class="btn btn-warning" href="#">Edit</a>

                <a class="btn btn-primary" href="#">Like</a>



            </div>
        </div>
    </div>
</body>
