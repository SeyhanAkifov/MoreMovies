@model MovieViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@{
    ViewData["Title"] = "Movie Details";
}

<body>

    <div class="container" style="background: url()>
        <div class="bg-light text-dark">
            <div class="col">
                @if (Model != null)
                {
                    <h1>@Model.Title</h1>

                    <div class="movie-image-details">
                        <img src="@Model.ImageUrl" alt="Image" width="200" height="300">
                    </div>
                    <div class="container">
                        <div class="col-md-4 text-center">
                            <h3 class="my-3 ">Movie info</h3>

                            <h3 >Language: @Model.Language</h3>
                            <h3 > <a href=@Model.HomePage>Home Page</a></h3>
                            <h3 >Genre: @Model.Genre</h3>
                            <h3 >Country: @Model.Country</h3>
                            <h3 >Budget: @Model.Budget $</h3>
                            <div class="row comment mt-4 text-justify float-left " style="width: 550px; margin: 0 0 auto">
                                <h3>@Model.Description</h3>
                            </div>
                            <h3 >Release date: @Model.ReleaseDate</h3>

                            @if (Model.Creator == User.Identity.Name)
                            {
                                <form method="post">
                                    <a class="btn btn-danger" asp-controller="Movie" asp-action="Delete" asp-route-id="@Model.Id" name="@Model.Id">Delete</a>
                                </form>
                                <a class="btn btn-warning" asp-controller="Movie" asp-action="Edit" asp-route-id="@Model.Id" name="@Model.Id">Edit</a>
                            }


                            <a class="btn btn-primary" asp-controller="Movie" asp-action="Like" asp-route-id="@Model.Id" name="@Model.Id">Like: @Model.Likes</a>


                            <a class="btn btn-primary" asp-controller="Movie" asp-action="AddComment" asp-route-id="@Model.Id">Write a comment</a>

                            @foreach (var item in Model.Actors)
                            {
                                <div class="containerComments darkerComments">
                                    <p>@item</p>

                                </div>
                            }

                        </div>
                        <div class="col-sm-1">
                            <section>
                                <div class="container">
                                    <div class="row">
                                        <div class="col-sm-5 col-md-6 col-12 pb-4">
                                            <h1>Comments</h1>
                                            @foreach (var item in Model.Comments)
                                            {
                                                <div class="comment mt-4 text-justify float-left">
                                                    <h4>@item.UserFullName </h4> <span>@item.CreatedOn.ToString("g")</span> <br>
                                                    <p>@item.Description</p>
                                                </div>
                                            }
                                        </div>

                                    </div>
                                </div>
                            </section>
                        </div>

                    </div>
                    <div class="col-sm-1">
                        <iframe width="560" height="315" src="@Model.HomePage" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    </div>
                }
                else
                {
                    <h1>Not Found</h1>
                }


            </div>


            
        </div>
        
    </div>





</body>
