<div id="shell">

    <div id="main">
        <div id="content">
            @if (Model.Count > 0)
            {
                <h1>All Movies</h1>
                <div class="box col-12">
                    @foreach (var movie in Model)
                    {
                        @await Html.PartialAsync("../Shared/_MoviePR", movie)
                    }
                </div>
            }
            else
            {
                <h1>No Movies Here</h1>
            }

        </div>
    </div>
</div>