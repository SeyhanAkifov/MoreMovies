@model CinemaProjectionInputDto

@{
    ViewData["Title"] = "Add Projection";

}
<article class="admin-main-item">
<h1>ADD Coming Soon</h1>
<form class="text-center border border-light p-5" asp-controller="Cinema" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="ProjectionTime">Date</label>
        <input asp-for="ProjectionTime" type="text" class="form-control" placeholder="Date" name="date" value="">
        <span asp-validation-for="ProjectionTime" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MovieName">Movie Name</label>
        <input asp-for="MovieName" type="text" class="form-control" placeholder="Movie Name" name="movieName" value="">
        <span asp-validation-for="MovieName" class="small text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CinemaHallName">Hall</label>
        <input asp-for="CinemaHallName" type="text" class="form-control" placeholder="Hall Name" name="cinemaHallName" value="">
        <span asp-validation-for="CinemaHallName" class="small text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Time">Time</label>
        <input asp-for="Time" type="text" class="form-control" placeholder="Time" name="time" value="">
        <span asp-validation-for="Time" class="small text-danger"></span>
    </div>
    <div class="admin-main-item-footer form-group">
    <button type="submit" class="btn btn-primary" value="submit">Add</button>
        </div>
</form>
</article>