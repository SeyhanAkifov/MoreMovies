@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "All Roles";
}

<h1>All Roles</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-controller="Administration" asp-action="CreateRole">Add new role</a>

    foreach (var role in Model)
    {
<div class="card mb-3">
    <div class="card-header">
        Role Id: @role.Id
    </div>
    <div class="card-header">
        Role Name: @role.Name
    </div>

    <div class="card-footer">
        <a class="btn btn-danger mb-3" style="width:auto" asp-controller="Administration" asp-action="EditRoles" asp-route-id="@role.Id">Edit</a>
        <a class="btn btn-primary mb-3" style="width:auto" asp-controller="Administration" asp-action="DeleteRole" asp-route-id="@role.Id">Delete</a>
    </div>

</div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>>
        <div class="card-body">
            <h5>Use the button below to create a role</h5>>
            <a class="btn btn-primary" style="width:auto" asp-controller="Administration" asp-action="CreateRole">Create Role</a>
        </div>>
    </div>
}
