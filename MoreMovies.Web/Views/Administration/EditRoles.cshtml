@using MoreMovie.Web.Models
@model EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
}

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="RoleId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleId" disable class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="ListRoles" class="btn btn-primary">Cancel</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Users in this role</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">Not at the moment</h5>
            }
        </div>
        <div class="card-footer">

            <a asp-controller="Administration" asp-action="EditUsersInRole" asp-route-roleId="@Model.RoleId" style="width:auto" class="btn btn-primary">Add or Remove Users</a>
        </div>
    </div>
</form>
