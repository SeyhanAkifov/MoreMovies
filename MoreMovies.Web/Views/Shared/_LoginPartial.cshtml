@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-check-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button>
                <a class="btn-flip" data-back="Logout" data-front="Logout" ></a>
                    </button>
            </form>
        </li>
    }
    else
    {
       

        <li class="nav-item"><a class="btn-flip" data-back="Register" data-front="Register" asp-area="Identity" asp-page="/Account/Register"></a></li>
      
        
            
        <li class="nav-item"><a class="btn-flip" data-back="Login" data-front="Login" asp-area="Identity" asp-page="/Account/Login"></a></li>
        
    }
</ul>
