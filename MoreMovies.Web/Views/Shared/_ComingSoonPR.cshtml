@model ICollection<ComingSoonViewModel>

<section id="coming" class="max-w-7xl mx-auto p-4 md:p-8">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6 border-b border-red-600 pb-2">
        <h3 class="text-2xl font-bold text-red-500">COMING SOON<strong>!</strong></h3>
        <a asp-controller="ComingSoon" asp-action="All" class="text-red-500 hover:underline text-sm md:text-base">See all</a>
    </div>

    <!-- Coming Soon Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var item in Model)
        {
            @await Html.PartialAsync("../ComingSoon/ComingSoon", item)
        }
    </div>
</section>
