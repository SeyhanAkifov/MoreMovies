                    <a class="navbar-logo" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/css/images/logo2.png" /></a>
                </article>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item"><a href="#" class="btn-flip" data-back="My Movies" data-front="My Movies"></a></li>
                            <li class="nav-item"><a href="#" class="btn-flip" data-back="My Liked" data-front="My Liked"></a></li>
                            <li class="nav-item"><a href="#" class="btn-flip" data-back="Add Movie" data-front="Add Movie"></a></li>
                        }

                        <li class="nav-item"><a href="#" class="btn-flip" data-back="In Cinema" data-front="In Cinema"></a></li>
                        <li class="nav-item"><a href="#" class="btn-flip" data-back="Coming Soon" data-front="Coming Soon"></a></li>
                        <li class="nav-item"><a href="#" class="btn-flip" data-back="News" data-front="News"></a></li>
                        <li class="nav-item"><a href="#" class="btn-flip" data-back="Contact" data-front="Contact"></a></li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="holder" style="display: none;">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" style="display: none;">
            Launch demo modal
        </button>
    </div>

